# Ambiente
ENVIRONMENT=production
DEBUG=0

# Banco de Dados
POSTGRES_SERVER=db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=your_db_name

# Redis
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_redis_password

# Segurança
SECRET_KEY=your_secret_key_at_least_32_chars_long
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# WhatsApp API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your_mp_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mp_public_key

# Configurações de Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Configurações de SSL
SSL_KEYFILE=/etc/nginx/ssl/server.key
SSL_CERTFILE=/etc/nginx/ssl/server.crt

# Configurações de CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com 